<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone"
        android:id="@+id/score_frame">
        <com.example.jordanagreen.washizu.ScoreView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score_view"
            android:text="Score View"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/game_frame">
        <com.example.jordanagreen.washizu.WashizuView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/game_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/buttons_frame">
            <Button
                android:id="@+id/chii_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:onClick="onChiiButtonPressed"
                android:text="@string/chii"/>
            <Button
                android:id="@+id/pon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_toRightOf="@id/chii_button"
                android:onClick="onPonButtonPressed"
                android:text="@string/pon"/>
            <Button
                android:id="@+id/kan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chii_button"
                android:clickable="false"
                android:onClick="onKanButtonPressed"
                android:text="@string/kan"/>
            <Button
                android:id="@+id/ron_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/kan_button"
                android:clickable="false"
                android:layout_below="@id/pon_button"
                android:onClick="onRonButtonPressed"
                android:text="@string/ron"/>
            <Button
                android:id="@+id/tsumo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/kan_button"
                android:clickable="false"
                android:layout_below="@id/pon_button"
                android:onClick="onTsumoButtonPressed"
                android:text="@string/tsumo"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/round_text"
            android:layout_above="@id/buttons_frame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttons_frame"
            android:id="@+id/winds_frame"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind_up"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind_left"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind_right"
                android:layout_gravity="center_vertical|right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind_down"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="25dp"/>
        </FrameLayout>

    </RelativeLayout>



</RelativeLayout>